#footer
	background: #4a4a4a
	position relative
	padding: 40px 0
	text-align: center
	&:before
		content: ''
		position: absolute
		height 1px
		width: 100%
		left 0
		right 0
		background-color #fff
		top 6px
#footer
	h5
		font-size: 24px;
		font-family: "PlayfairDisplayBold", serif;
		color: rgb(255, 252, 252);
		font-weight: bold;
		line-height: 1
		margin-bottom: 20px
	p
	#conditions
		font-size: 14px;
		font-family: "OpenSansLight", sans-serif;
		color: rgb(254, 254, 254);
		line-height: 1.8
	#conditions
		text-decoration underline
		&:hover
		&:focus
			text-decoration none

.soc_buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 0 18px 20px
		position relative
		z-index: 1
		.fa
			width: 30px;
			height: 30px;
			background: #d41392
			box-shadow 0 5px 11px 0 rgba(#000000, .15)
			color #4a4a4a
			font-size 20px
			line-height 30px
			border-radius 50%
			transition: all .3s ease-in
			&:hover
				background-color: #b00575
				transition: all .3s ease-in
				color: #ffffff
.modal-content
	background: #4a4a4a
	border 3px solid pr_pink
	text-align center
	padding 20px
	.form_newsletter
		display: block
		height auto
		h4
			text-align: center
			margin-bottom: 10px
		p
			font-size: 28px;
			font-family: "RobotoRegular", sans-serif;
			color: #fddcc3
			line-height: 1.2;
			text-align center
			margin-top: 0
			margin-bottom: 20px
		.infront_submit,
		.span_phone
			font-size: 18px
			margin-bottom 20px
			color: #fff
		.email-block input,
		.phone-block input
			margin 0 0 20px
	.close
		position absolute
		border 0
		border-radius 50%
		width 20px
		height 20px
		font-size 20px
		line-height 22px
		right 20px
		top 20px
		z-index 999
		padding: 0;
		text-align: center;
		&:hover
			background: rgb(22,21,17)
			color: #fff
			border: 1px solid #eee
			line-height 20px