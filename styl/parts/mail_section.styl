#mail_section
    background-color #4a4a4a
    width 100%
    padding: 29px 0
    overflow: hidden
    position relative
    &:before
    &:after
        content: ''
        position: absolute
        background-color: #fefefe
        opacity: 1
        width: 100%
        height: 1px;
        left 0
        right 0
    &:before
        top 5px
    &:after
        bottom: 5px
