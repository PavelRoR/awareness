#plan
	h3:after
		margin-bottom: 111px
#plan_container
	width: 1003px
	margin: 0 auto
.day_wrap
	border-radius: 5px;
	background-color: rgb(255, 255, 255);
	box-shadow: 0px 5px 11px 0px rgba(0, 0, 0, 0.15);
	width: 940px;
	height: 420px;
	padding: 35px 400px 25px 38px
	position relative
	margin-bottom: 145px
	h4
		font-size: 27px;
		font-family: "PlayfairDisplayBold", serif;
		color: pr_pink
		font-weight: bold;
		line-height: 1.222;
		margin: 0 0 21px
		span
			color #0b154e
	&:last-of-type
		margin-bottom: 75px
.day_img
	position: absolute
	top -30px
	right -42px
.plan_list
	list-style: none
	li
		font-size: 18px;
		font-family: "OpenSansRegular", sans-serif;
		color: rgb(74, 74, 74);
		line-height: 1.3;
		margin-bottom: 12px
		padding-left: 21px
		background-image url(../img/pink_disc.jpg)
		background-position 2px 8px
		background-repeat no-repeat
		&:last-child
			font-family: "OpenSansBold", sans-serif;
.day_wrap
	&:nth-child(2)
	&:nth-child(4)
		right -38px
		padding: 40px 25px 35px 400px
		.day_img
			left -53px
			right auto